{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@utils/*": ["src/utils/*"],
    },
    "outDir": "./build",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "includes": ["index.ts", "src/env.d.ts"]
}
